function saatgoster() {
    Stamp = new Date();
    var Hours;
    var Minutes;
    var Seconds;
    var Time;
    Hours = Stamp.getHours();
    Minutes = Stamp.getMinutes();
    Seconds = Stamp.getSeconds();
    if (Seconds.length == 0)
        Seconds = "0" + Seconds;
    Time = Stamp.toLocaleTimeString();
    var saatlabel = document.getElementById("lblsaat");
    saatlabel.innerText = Time;
    setTimeout("saatgoster()", 1000);
}

