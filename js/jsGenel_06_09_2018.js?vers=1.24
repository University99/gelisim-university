function isNumeric(val) {
    var numeric = true;
    var chars = "0123456789.";
    var len = val.length;
    var char = "";
    for (i = 0; i < len; i++) { char = val.charAt(i); if (chars.indexOf(char) == -1) { numeric = false; } }
    return numeric;
}


